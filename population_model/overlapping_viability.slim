//// AGE BASED SURVIVAL RULES AND MOVEMENT
early() {
	i2.evaluate(sim.subpopulations);
	all = p1.individuals;
	// catn(size(all));
	for (ind in all) {
		ind.fitnessScaling = FEMALE_SURVIVE_RATE[ind.age];
		if (ind.age == 0) {
			nn = i2.nearestNeighbors(ind,p1.individualCount,p1);
			new = nn[nn.age==0];
			competition_ratio = size(new) / EXPECTED_COMPETITION;
			// catn("========="+competition_ratio);
			if (DENSITY_GROWTH_CURVE == "concave")
    			viability = 2*GROWTH_AT_ZERO_DENSITY /MAX_OFFSPRINGS_PER_FEMALE / (((GROWTH_AT_ZERO_DENSITY - 1) *competition_ratio) + 1);
    		if (DENSITY_GROWTH_CURVE == "linear")
    			viability = 2*(1 - GROWTH_AT_ZERO_DENSITY)/MAX_OFFSPRINGS_PER_FEMALE*competition_ratio + 2*GROWTH_AT_ZERO_DENSITY/MAX_OFFSPRINGS_PER_FEMALE;
    		if (DENSITY_GROWTH_CURVE == "convex")
    			viability = 2*exp(log(GROWTH_AT_ZERO_DENSITY/MAX_OFFSPRINGS_PER_FEMALE)*(1-(1+log(MAX_OFFSPRINGS_PER_FEMALE)/log(GROWTH_AT_ZERO_DENSITY/MAX_OFFSPRINGS_PER_FEMALE))*competition_ratio^4));
			ind.fitnessScaling = ifelse(viability<0,0.0,viability * INITIAL_FEMALE_AGE_DISTRIBUTION[0]);
		}
		if (ind.age != 0) {
				if (REPRISING_BOUNDARIES) {
					// Movement within reprising boundaries.
					if (TWO_DIMENSIONAL) {
						do position = ind.spatialPosition + rnorm(2, 0, FEMALE_SPEED);
						while (!ind.subpopulation.pointInBounds(position));
						ind.setSpatialPosition(position);
