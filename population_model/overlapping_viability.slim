					if (TWO_DIMENSIONAL) {
						ind.x = ind.x + rnorm(1, 0, FEMALE_SPEED);
						ind.y = ind.y + rnorm(1, 0, FEMALE_SPEED);
						ind.setSpatialPosition(p1.pointPeriodic(ind.spatialPosition));
					} else {
						ind.x = ind.x + rnorm(1, 0, FEMALE_SPEED);
						ind.setSpatialPosition(p1.pointPeriodic(ind.spatialPosition));
					}
				}
		}
	}
